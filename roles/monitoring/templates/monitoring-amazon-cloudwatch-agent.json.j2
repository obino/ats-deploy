{
  "agent": {
    "metrics_collection_interval": 60,
    "logfile": "",
    "region": "onprem"
  },
  "metrics": {
    "namespace": "{{ eucalyptus_monitoring_cloudwatch_namespace | quote }}",
    "metrics_collected": {
      "collectd": { 
        "collectd_security_level": "none",
        "metrics_aggregation_interval": 0,
        "name_prefix": "cloud_"
      }      
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [ {
          "file_path": "/var/log/eucalyptus/cloud-output.log",
          "log_group_name": "cloud",
          "log_stream_name": "{local_hostname}.cloud",
          "timestamp_format": "%Y-%m-%d %H:%M:%S",
          "timezone": "UTC"
        }, {
          "file_path": "/var/log/eucalyptus/eucanetd.log",
          "log_group_name": "cloud",
          "log_stream_name": "{local_hostname}.eucanetd",
          "timestamp_format": "%Y-%m-%d %H:%M:%S",
          "timezone": "UTC"
        }, {
          "file_path": "/var/log/eucalyptus/nc.log",
          "log_group_name": "cloud",
          "log_stream_name": "{local_hostname}.node",
          "timestamp_format": "%Y-%m-%d %H:%M:%S",
          "timezone": "UTC"
        } ]
      }
    }
  }
}
